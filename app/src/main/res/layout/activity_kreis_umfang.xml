<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:layout_width="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KreisUmfang"
        android:orientation="vertical"
        android:padding="16dp">
        <Button
                android:text="zurück"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btZurueckKU"/>
        <TextView
                android:text="Formel: π*d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:textSize="17dp"
                android:textColor="@color/black"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/kreis"
                android:id="@+id/imageView2"/>
        <TextView
                android:text="d:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView9"
                android:textSize="16sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number|numberDecimal"
                android:ems="10"
                android:id="@+id/etKUD"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Berechne"
                android:id="@+id/btKUB"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvKUE"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvKUEG"
                android:textColor="@color/black"
                android:textSize="20dp"/>


</LinearLayout>
 </ScrollView>