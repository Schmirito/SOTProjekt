<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PyramideViereckOberlaeche" android:orientation="vertical"
        android:padding="16dp">

    <Button
            android:text="zurück"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btZurueckPVO"/>
    <TextView
            android:text="Formel: a² + 4 * (1/2 * a * ha)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView34"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="235dp" app:srcCompat="@drawable/viereckspyramide"
            android:id="@+id/imageView11"/>
    <TextView
            android:text="a:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView35"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/etPVOa"/>
    <TextView
            android:text="ha:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView36"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/etPVOha"/>
    <Button
            android:text="Berechnen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btPVOB"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvPVOe"/>
</LinearLayout>