<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:layout_width="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Umrechner"
            android:orientation="vertical"
            android:padding="16dp">
        <TextView
                android:text="Millimeter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView89"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number|numberDecimal"
                android:ems="10"
                android:id="@+id/etMiliE"/>
        <TextView
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvMili"/>
        <TextView
                android:text="Zentimeter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView90"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number|numberDecimal"
                android:ems="10"
                android:id="@+id/etZentiE"/>
        <TextView
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvZenti"/>
        <TextView
                android:text="Dezimeter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView91"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number|numberDecimal"
                android:ems="10"
                android:id="@+id/etDeziE"/>
        <TextView
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvDezi"/>
        <TextView
                android:text="Meter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView92"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number|numberDecimal"
                android:ems="10"
                android:id="@+id/etMeterE"/>
        <TextView
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvMeter"/>
        <TextView
                android:text="Kilometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView93"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number|numberDecimal"
                android:ems="10"
                android:id="@+id/etKiloE"/>
        <TextView
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvKilo"/>
    </LinearLayout>

</ScrollView>
