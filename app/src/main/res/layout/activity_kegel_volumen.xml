<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KegelVolumen" android:orientation="vertical"
        android:padding="16dp">

    <Button
            android:text="zurück"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btZurueckKegelV"/>
    <TextView
            android:text="Formel: 1/3 * π * r² * h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView80"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="222dp" app:srcCompat="@drawable/wp_volumen_kegel_1_1024x576"
            android:id="@+id/imageView23"/>
    <TextView
            android:text="r:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView81"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/etKegelVr"/>
    <TextView
            android:text="h:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView82"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/etKegelVh"/>
    <Button
            android:text="Berechnen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btKegelVB"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvKegelVe"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvKegelVeG"/>
</LinearLayout>