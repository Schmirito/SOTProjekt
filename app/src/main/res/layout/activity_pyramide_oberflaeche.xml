<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PyramideOberflaeche" android:orientation="vertical"
        android:padding="16dp">

    <Button
            android:text="zurück"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btZurueckPOI"/>
    <TextView
            android:text="Formel: a²  + 2 * a * hs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvPFOI"
            android:textSize="17dp"
            android:textColor="@color/black"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="268dp" app:srcCompat="@drawable/pyramide_volumen_etc"
            android:id="@+id/imageView"/>
    <TextView
            android:text="a:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView9" android:textColor="@color/black"
            android:textSize="16sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/etPOA"/>
    <TextView
            android:text="hs:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView10" android:textColor="@color/black"
            android:textSize="16sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/etPOHS"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Berechne"
            android:id="@+id/btPOB"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvPOE"
            android:textColor="@color/black"
            android:textSize="20dp"/>
</LinearLayout>