<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PyramideOberflaeche" android:orientation="vertical">

    <Button
            android:text="zurück"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btZurueckPOI"/>
    <TextView
            android:text="Formel: a²  + 2 * a * hs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvPFOI"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="268dp" app:srcCompat="@drawable/pyramide_volumen_etc"
            android:id="@+id/imageView"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="a ="
            android:ems="10"
            android:id="@+id/etPOIa"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="hs ="
            android:ems="10"
            android:id="@+id/etPOIhs"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Oberflächeninhalt ="
            android:ems="10"
            android:id="@+id/editTextTextPersonName3"/>
</LinearLayout>