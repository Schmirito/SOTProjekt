<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PyramideVolumen" android:orientation="vertical"
        android:padding="16dp">

    <Button
            android:text="zurück"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btZurueckPU"/>
    <TextView
            android:text="Formel: 1/3 * a²  *  h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvPV"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="253dp" app:srcCompat="@drawable/pyramide_volumen_etc"
            android:id="@+id/imageView3"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="a ="
            android:ems="10"
            android:id="@+id/etPVa"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="h ="
            android:ems="10"
            android:id="@+id/etPVh"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Volumen ="
            android:ems="10"
            android:id="@+id/etPVV"/>
</LinearLayout>