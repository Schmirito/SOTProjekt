<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:layout_width="match_parent">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ZweiDAuswahl" android:orientation="vertical"
        android:padding="16dp">
    <Button
            android:text="Zurück"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btZurueck2DA"/>
    <Button
            android:text="Dreieck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btDreieck"/>
    <Button
            android:text="Rechteck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btRechteck"/>
    <Button
            android:text="Fünfeck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btFuenfeck"/>
    <Button
            android:text="Trapez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btTrapez"/>
    <Button
            android:text="Parallelogramm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btParallelogramm"/>
    <Button
            android:text="Kreis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btKreis"/>
</LinearLayout>
</ScrollView>