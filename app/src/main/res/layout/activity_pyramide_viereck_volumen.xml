<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:layout_width="match_parent">
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PyramideViereckVolumen" android:orientation="vertical"
        android:padding="16dp">

    <Button
            android:text="zurück"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btZurueckPVV"/>
    <TextView
            android:text="Formel: 1/3 * a² * h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView31"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="221dp" app:srcCompat="@drawable/viereckspyramide"
            android:id="@+id/imageView13"/>
    <TextView
            android:text="a:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView32"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/etPVVa"/>
    <TextView
            android:text="h:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView33"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/etPVVh"/>
    <Button
            android:text="Berechnen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btPVVB"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvPVVe"/>
</LinearLayout>
</ScrollView>