<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:layout_width="match_parent">
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".KreisAuswahl">

    <Button
            android:text="zurück"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btZurueckKreis"/>
    <Button
            android:text="Umfang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btKreisUmfang"/>
    <Button
            android:text="Flächeninhalt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btKreisFlaeche"/>

</LinearLayout>
</ScrollView>