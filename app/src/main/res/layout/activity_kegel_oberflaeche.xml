<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KegelOberflaeche" android:orientation="vertical"
        android:padding="16dp">

    <Button
            android:text="zurück"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btZurueckKegelO"/>
    <TextView
            android:text="Formel: r² * π + r * π * s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView83"
            android:textSize="17dp"
            android:textColor="@color/black"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" app:srcCompat="@drawable/wp_volumen_kegel_1_1024x576"
            android:id="@+id/imageView24"/>
    <TextView
            android:text="r:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView84"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/etKegelOr"/>
    <TextView
            android:text="s:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView85"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/etKegelOs"/>
    <Button
            android:text="Berechnen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btKegelOB"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvKegelOe"
            android:textSize="17dp"
            android:textColor="@color/black"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvKegelOeG"
            android:textSize="17dp"
            android:textColor="@color/black"/>
</LinearLayout>